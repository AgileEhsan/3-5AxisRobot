QToolButton 
{
	border: 2px solid #8f8f91;
	border-radius: 6px;
	background-color: qlineargradient(spread:pad, x1:1, y1:1, x2:1, y2:0, stop:0 rgba(63, 174, 247, 255), stop:1 rgba(255, 255, 255, 255));
}
QToolButton:pressed 
{
	background-color: qlineargradient(spread:pad, x1:1, y1:0, x2:1, y2:1, stop:0 rgba(63, 174, 247, 255), stop:1 rgba(255, 255, 255, 255));

}

